<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.RegistroActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="45dp"
        android:text="Termina tu registro"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:text="Ingresa tu telefono"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etxtIngresaTelefono"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/boton"
        android:hint="7771234567"
        android:textColor="@color/textmenu"
        android:textColorHint="@color/textmenu"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:text="Ingresa tu nombre"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtIngresaTelefono" />

    <EditText
        android:id="@+id/etxtIngresaNombre"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/boton"
        android:hint="Usuario nuevo"
        android:textColor="@color/textmenu"
        android:textColorHint="@color/textmenu"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:text="Repite tu contraseña"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtIngresaContraseniaRegistro" />

    <EditText
        android:id="@+id/etxtIngresaContraseniaRegistro"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/boton"
        android:hint="********"
        android:textColor="@color/textmenu"
        android:textColorHint="@color/textmenu"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:text="Ingresa tu contraseña"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtIngresaNombre" />


    <EditText
        android:id="@+id/etxtIngresaContraseniaRegistroR"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/boton"
        android:hint="********"
        android:textColor="@color/textmenu"
        android:textColorHint="@color/textmenu"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnSiguienteRegistro"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/shapeboton"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>